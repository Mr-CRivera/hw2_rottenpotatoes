-# in app/views/movies/show.html.haml

%h1 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h2 Description:

%p#description= @movie.description

.actions
  .action
    = link_to 'Edit', edit_movie_path(@movie)
  .action
    = button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?', :class => 'button_action'
.navigations
  .navigate
    = link_to 'Back to movie list', movies_path
