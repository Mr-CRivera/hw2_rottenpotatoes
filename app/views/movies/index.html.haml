-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @hilite_title}
        = link_to 'Movie Title', movies_path("title"), :id => 'title_header'
      %th{:class => @hilite_rating}
        = link_to 'Rating', movies_path("rating"), :id => 'rating_header'
      %th{:class => @hilite_release_date}
        = link_to 'Release Date', movies_path("release_date"), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
